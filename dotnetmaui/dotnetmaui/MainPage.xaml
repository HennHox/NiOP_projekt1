<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dotnetmaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <ListView
                x:Name="Lista"
                ItemTapped="Lista_ItemTapped">

                <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding Ime}" ImageSource="{Binding Slika}" Detail="{Binding status}"></ImageCell>
                </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
